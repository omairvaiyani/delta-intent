{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2019", "esnext.asynciterable", "esnext.array", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noEmitOnError": false,
    "noImplicitAny": false,
    "allowJs": false,
    "removeComments": true,
    "outDir": "dist",
    "declaration": true
  },
  "include": ["src/**/*", "spec/unit/utils.spec.ts", "spec/unit/model-configuration.spec.ts"],
  "exclude": []
}
